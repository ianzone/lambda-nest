{
  "name": "lambda-nest",
  "version": "0.0.1",
  "description": "AWS lambda nestjs template",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "build": "nest build",
    "start": "nest build && sls offline",
    "deploy": "nest build && sls deploy --aws-s3-accelerate",
    "lint": "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true src",
    "postinstall": "lefthook install",
    "commit": "git add . && git-cz"
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.14.0",
    "@nestjs/common": "^10.3.4",
    "@nestjs/core": "^10.3.4",
    "@nestjs/platform-express": "^10.3.4",
    "@nestjs/swagger": "^7.3.0",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.19.1",
    "swagger-ui-dist": "^5.12.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@nestjs/cli": "^10.3.2",
    "@serverless/typescript": "^3.38.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@tsconfig/node-lts": "^20.1.1",
    "@types/aws-lambda": "^8.10.136",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "esbuild": "^0.20.2",
    "git-cz": "^4.9.0",
    "lefthook": "^1.6.7",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  }
}
